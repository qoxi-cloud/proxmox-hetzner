#!/bin/bash
# Dynamic MOTD for Proxmox VE
# Shows system status on login

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[0;33m'
BLUE='\033[0;34m'
CYAN='\033[0;36m'
WHITE='\033[1;37m'
NC='\033[0m' # No Color

# Get system information
HOSTNAME=$(hostname -f 2>/dev/null || hostname)
KERNEL=$(uname -r)
UPTIME=$(uptime -p 2>/dev/null | sed 's/up //')
LOAD=$(cat /proc/loadavg | awk '{print $1", "$2", "$3}')

# CPU info
CPU_MODEL=$(grep -m1 "model name" /proc/cpuinfo | cut -d: -f2 | sed 's/^ *//')
CPU_CORES=$(nproc)

# Memory info
MEM_TOTAL=$(free -h | awk '/^Mem:/ {print $2}')
MEM_USED=$(free -h | awk '/^Mem:/ {print $3}')
MEM_PERCENT=$(free | awk '/^Mem:/ {printf "%.1f", $3/$2*100}')

# Swap info
SWAP_TOTAL=$(free -h | awk '/^Swap:/ {print $2}')
SWAP_USED=$(free -h | awk '/^Swap:/ {print $3}')

# ZFS ARC info (if available)
if [ -f /proc/spl/kstat/zfs/arcstats ]; then
    ARC_SIZE=$(awk '/^size/ {printf "%.1f GB", $3/1024/1024/1024}' /proc/spl/kstat/zfs/arcstats 2>/dev/null)
fi

# Disk usage (root)
DISK_USAGE=$(df -h / | awk 'NR==2 {print $3"/"$2" ("$5")"}')

# ZFS pool status
ZFS_POOLS=$(zpool list -H -o name,health,cap 2>/dev/null | while read name health cap; do
    if [ "$health" = "ONLINE" ]; then
        echo -e "${GREEN}$name${NC}: $health ($cap used)"
    else
        echo -e "${RED}$name${NC}: $health ($cap used)"
    fi
done)

# Network info
PRIMARY_IP=$(hostname -I 2>/dev/null | awk '{print $1}')
if command -v tailscale &>/dev/null && tailscale status &>/dev/null; then
    TAILSCALE_IP=$(tailscale ip -4 2>/dev/null)
fi

# VM/Container count
if command -v qm &>/dev/null; then
    VM_RUNNING=$(qm list 2>/dev/null | grep -c running || echo "0")
    VM_TOTAL=$(qm list 2>/dev/null | tail -n +2 | wc -l || echo "0")
fi
if command -v pct &>/dev/null; then
    CT_RUNNING=$(pct list 2>/dev/null | grep -c running || echo "0")
    CT_TOTAL=$(pct list 2>/dev/null | tail -n +2 | wc -l || echo "0")
fi

# Updates available
UPDATES=$(apt-get -s upgrade 2>/dev/null | grep -c "^Inst" || echo "0")
SECURITY_UPDATES=$(apt-get -s upgrade 2>/dev/null | grep -i security | grep -c "^Inst" || echo "0")

# NTP sync status
if command -v chronyc &>/dev/null; then
    NTP_STATUS=$(chronyc tracking 2>/dev/null | grep -q "Leap status.*Normal" && echo -e "${GREEN}Synchronized${NC}" || echo -e "${YELLOW}Not synced${NC}")
elif command -v timedatectl &>/dev/null; then
    NTP_STATUS=$(timedatectl 2>/dev/null | grep -q "synchronized: yes" && echo -e "${GREEN}Synchronized${NC}" || echo -e "${YELLOW}Not synced${NC}")
fi

# Print MOTD
echo ""
echo -e "${CYAN}=================================================================${NC}"
echo -e "${WHITE}  Proxmox VE - ${HOSTNAME}${NC}"
echo -e "${CYAN}=================================================================${NC}"
echo ""
echo -e "${BLUE}System Information:${NC}"
echo -e "  Kernel:     ${KERNEL}"
echo -e "  Uptime:     ${UPTIME}"
echo -e "  Load:       ${LOAD}"
echo -e "  CPU:        ${CPU_MODEL} (${CPU_CORES} cores)"
echo ""
echo -e "${BLUE}Memory & Storage:${NC}"
echo -e "  RAM:        ${MEM_USED} / ${MEM_TOTAL} (${MEM_PERCENT}%)"
echo -e "  Swap:       ${SWAP_USED} / ${SWAP_TOTAL}"
[ -n "$ARC_SIZE" ] && echo -e "  ZFS ARC:    ${ARC_SIZE}"
echo -e "  Root:       ${DISK_USAGE}"
echo ""
if [ -n "$ZFS_POOLS" ]; then
    echo -e "${BLUE}ZFS Pools:${NC}"
    echo -e "  $ZFS_POOLS" | sed 's/^/  /'
    echo ""
fi
echo -e "${BLUE}Network:${NC}"
echo -e "  Primary IP: ${PRIMARY_IP}"
[ -n "$TAILSCALE_IP" ] && echo -e "  Tailscale:  ${TAILSCALE_IP}"
echo ""
if [ -n "$VM_TOTAL" ] || [ -n "$CT_TOTAL" ]; then
    echo -e "${BLUE}Virtualization:${NC}"
    [ -n "$VM_TOTAL" ] && echo -e "  VMs:        ${VM_RUNNING}/${VM_TOTAL} running"
    [ -n "$CT_TOTAL" ] && echo -e "  Containers: ${CT_RUNNING}/${CT_TOTAL} running"
    echo ""
fi
echo -e "${BLUE}Status:${NC}"
[ -n "$NTP_STATUS" ] && echo -e "  NTP:        ${NTP_STATUS}"
if [ "$UPDATES" -gt 0 ]; then
    if [ "$SECURITY_UPDATES" -gt 0 ]; then
        echo -e "  Updates:    ${YELLOW}${UPDATES} available (${SECURITY_UPDATES} security)${NC}"
    else
        echo -e "  Updates:    ${UPDATES} available"
    fi
else
    echo -e "  Updates:    ${GREEN}System up to date${NC}"
fi
echo ""
echo -e "${CYAN}=================================================================${NC}"
echo ""
